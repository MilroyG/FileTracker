<?xml version="1.0" encoding="utf-8"?>
<!-- button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with stroke -->
    <item>

        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Button background color -->
            <stroke
                android:width="10dp"
            android:color="@android:color/black" /> <!-- Stroke color -->
            <corners android:radius="70dp" /> <!-- Button corner radius -->
        </shape>
    </item>
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="70dp" /> <!-- Button corner radius -->
        </shape>
    </item>
</layer-list>
